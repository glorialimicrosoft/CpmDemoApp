@{  
    ViewBag.Title = "Home Page";  
}  

<script>
    function loadPartialView() {
            $.ajax({
                url: "@Url.Action("MessagesList","Home")",
                type: 'POST',
                dataType: 'html',        
                cache: false,
                success: function (html) {
                     $("#partialContainer").html(html); 
                }
            });
        }
    function RefreshPartial(){
        //this will wait 1 seconds and then fire the load partial function
        setTimeout(function(){
            loadPartialView();
            //recall this function so that it will continue to loop
            RefreshPartial();
        }, 1000);
    }
    //initialize the loop
    RefreshPartial();
</script>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flower Shop - Inquiry with Insights</title>
    <style>
        body, html {
            height: 100%; /* Make sure html and body are full height */
            margin: 0;
            padding: 0;
            background-color: #f9f9f9;
            font-family: Arial, sans-serif;
        }

        .content-container {
            height: calc(85vh - 60px); /* 90% of the viewport height minus the header and footer height */
            overflow: auto;
            padding: 20px;
            padding-bottom: 70px;
        }

        .button {
            position: fixed;
            bottom: 60px; /* Adjust to align properly above the footer */
            width: 100%;
            text-align: left; /* Center the form button */
        }

        .header {
            background-color: #3498db; /* Changed header color to blue */
            padding: 20px;
            text-align: right; /* Aligning the logo to the right */
            color: #fff;
        }

        .shop-name {
            font-size: 24px;
            font-weight: bold;
            margin-top: 10px;
        }

        .shop-number {
            font-size: 16px;
            margin-top: 5px;
        }

        .footer {
            background-color: #3498db; /* Footer color */
            color: #fff;
            text-align: center;
            padding: 10px 0;
            position: fixed;
            width: 100%;
            bottom: 0;
        }
    </style>
</head>

<body>
    <div class="header">
        <div class="shop-name">Contoso Flower Shop Business Chat</div>
        <div class="shop-number">+1(833)-595-2461</div>
    </div>

    <div class="content-container">
        <div id="partialContainer">
            @Html.Partial("MessagesList")
        </div>
    </div>

    <div class="button">
        @using (Html.BeginForm("ClearHistory", "Home", FormMethod.Post))
        {
            <input type="submit" value="Clear History" class="btn-secondary" />
        }
    </div>

    <div class="footer">
        &copy; 2024 Contoso Flower Shop Business Chat. All rights reserved.
    </div>
</body>


<script>
    if ( window.history.replaceState ) {
        window.history.replaceState( null, null, window.location.href );
    }
</script>
