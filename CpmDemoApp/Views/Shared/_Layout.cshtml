<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Message Analysis Demo App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CpmDemoApp.styles.css" asp-append-version="true" />
    <style>
        body, html {
            height: 100%; /* Make sure html and body are full height */
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #EEFBF2;
            padding: 10px;
        }

        .shopname {
            display: flex;
            margin-top: 10px;
            margin-left: 10%;
        }

        .logo {
            height: 38px;
            padding-right: 10px;
        }

        .customerinsightsbutton {
            margin-right: 10%;
            text-align: right;
            padding: 5px 10px;
            text-decoration: none;
            display: inline-block;
            border: 2px solid black;
        }

        .customerinsightsbuttontext {
            font-size: 16px;
            color: #000;
            font-family: Arial rounded mt;
        }

        .shopnametext {
            font-size: 24px;
            font-family: script MT;
            font-weight: bold;
            color: #000;
        }

        .body {
            display: flex;
            flex-direction: column;
            justify-content: center; /* Center vertically */
            height: calc(100vh - 76px - 60px); /* Full viewport height minus footer and header */
            position: relative;
            color: white;
            text-align: left;
        }

        .body::before {
            content: '';
            background-image: url('/assets/background.png');
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-size: cover;
            filter: blur(3px);
            /* Apply blur effect */
            z-index: -1;
            /* Ensures the pseudo-element is behind the content */
        }

        .footer {
            background-color: #EEFBF2;
            color: #808080;
            font-family: ink free;
            text-align: right;
            padding-right: 20px;
            position: fixed;
            width: 100%;
            bottom: 0;
        }
    </style>
</head>
<body>
    <div class="header">
        <div class="shopname">
            <img src="~/assets/logo.png" alt="Shop Logo" class="logo">
            @Html.ActionLink("Blossom Bliss Studio", "Index", "Home", new { area = "" }, new { @class = "navbar-brand shopnametext" })
        </div>
        <div class="customerinsightsbutton">
            @Html.ActionLink("Customer Insights", "CustomerInsights", "Home", new { area = "" }, new { @class = "nav-link customerinsightsbuttontext" })
        </div>
    </div>

    <div class="body">
        @RenderBody()
    </div>

    <div class="footer">
        &copy; 2024 Blossom Bliss Studio. All rights reserved.
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
